{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "stripInternal": false,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": []
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ngx-cbp-theme.js",
    "flatModuleId": "ngx-cbp-theme"
  },
  "files": [
    "./app/index.ts",
    "./app/typings.d.ts"
  ]

}
